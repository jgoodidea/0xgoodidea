<div class="service">
  <div class="container p-3 mx-auto my-auto text-center">
    <%= render "shared/stream", sectionText: @sectionText %>
    <div class="row">
      <% @services.each do |service| %>
        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 p-4">
          <div class="card">
            <div class="mx-auto" style="width: 120px;">
              <img class="card-img-top" src="<%= image_path(service.image) %>" alt="Card image">
            </div>
            <div class="card-body">
              <h4 class="card-title">
                <%= link_to service.title, service %>
                <!-- <%= service.title %> -->
              </h4>
              <p class="card-text">
                <%= service.summary %>
              </p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
