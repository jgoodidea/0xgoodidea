<div class="service">
  <div class="container p-3 mx-auto my-auto text-start">
    <div class="row">
      <div class="col-lg-4 col-md-5 col-sm-6 col-xs-12 text-center">
        <img src="<%= image_path(@service.image) %>" width="100%" alt="Service image">
      </div>
      <div class="col-lg-8 col-md-7 col-sm-6 col-xs-12">
        <h4>
          <%= @service.title %>
        </h4>
        <p>
          <%= @service.summary %>
        </p>
      </div>
      <div>
        <ul>
          <li><%= link_to "Edit", edit_service_path(@service) %></li>
          <li><%= link_to "Destroy", service_path(@service), data: {
            turbo_method: :delete,
            turbo_confirm: "Are you sure to destroy this service?"
          } %></li>
        </ul>
      </div>
    </div>
  </div>
</div>
