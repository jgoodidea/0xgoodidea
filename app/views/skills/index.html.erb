<div class="skill">
  <div class="container p-3 mx-auto my-auto text-center">
    <%= render "shared/stream", sectionText: @sectionText %>
    <div class="row">
      <% @skills.each do |skill| %>
        <div class="col-lg-3 col-md-6 col-sm-6 col-xs-12 p-4">
          <div class="p-2 shadow-lg">
            <div class="card">
              <div class="mx-auto p-2" style="width: 120px;">
                <img class="card-img-top" src="<%= skill.image %>" alt="Skill image">
              </div>
              <div class="card-body">
                <h4 class="card-title">
                  <%= skill.title %>
                </h4>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
