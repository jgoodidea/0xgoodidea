<div class="skill">
  <div class="container p-3 mx-auto my-auto text-start">
    <div class="row">
      <div class="col-lg-4 col-md-5 col-sm-6 col-xs-12 text-center">
        <img src="<%= @skill.image %>" alt="Skill image">
      </div>
      <div class="col-lg-8 col-md-7 col-sm-6 col-xs-12">
        <h4>
          <%= @skill.title %>
        </h4>
        <p>
          <%= @skill.summary %>
        </p>
      </div>
      <div>
        <ul>
          <li><%= link_to "Edit", edit_skill_path(@skill) %></li>
          <li><%= link_to "Destroy", skill_path(@skill), data: {
            turbo_method: :delete,
            turbo_confirm: "Are you sure to destroy this skill?"
          } %></li>
        </ul>
      </div>
    </div>
  </div>
</div>
